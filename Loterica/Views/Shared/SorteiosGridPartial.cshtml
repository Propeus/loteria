@model List<Repository.Sorteios>

<div class="container">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Numero do sorteio</th>
                        <th>Data do sorteio</th>
                        <th>Premio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NumeroSorteioExibicao</td>
                            <td>@item.DataSorteio.ToLongDateString()</td>
                            <td>@item.ValorPremio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
