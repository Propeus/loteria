@model List<Service.Model.ResultadoAposta>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Resultados</div>
        <div class="panel-body">
            <div class="table">
                <div class="trow header">
                    <div class="cell">
                        Numero da aposta
                    </div>
                    <div class="cell">
                        Data da aposta
                    </div>
                    <div class="cell">
                        Numero do sorteio
                    </div>
                    <div class="cell">
                        Numero da aposta
                    </div>
                    <div class="cell">
                        Quantidade de acertos
                    </div>
                    <div class="cell">
                        Numeros acertados
                    </div>
                    <div class="cell">
                        Prêmio
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="trow">
                        <div class="cell" data-title="Numero da aposta">
                            @item.Aposta.NumeroApostaExibicao
                        </div>
                        <div class="cell" data-title="Data da aposta">
                            @item.Aposta.DataAposta.ToShortDateString() às @item.Aposta.DataAposta.ToShortTimeString()
                        </div>
                        @if (item.Sorteio != null)
                        {

                            <div class="cell" data-title="Data da aposta">
                                @item.Sorteio.NumeroSorteioExibicao
                            </div>
                        }
                        else
                        {
                            <div class="cell" data-title="Numero do sorteio">   </div>
                        }
                        <div class="cell" data-title="Numero do sorteio">
                            @item.Aposta.NumeroApostaExibicao
                        </div>
                        <div class="cell" data-title="Numeros acertados">
                            @item.Acertos
                        </div>
                        <div class="cell" data-title="Quantidade de acertos">
                            @string.Join("-", @item.NumerosAcertados)
                        </div>
                        <div class="cell" data-title="Prêmio">
                            @item.ValorPremio
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
